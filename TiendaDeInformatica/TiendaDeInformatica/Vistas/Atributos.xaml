<UserControl x:Class="TiendaDeInformatica.Vistas.Atributos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TiendaDeInformatica.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
             Foreground="{DynamicResource MaterialDesignBody}"
             FontWeight="Regular"
             FontSize="13"
             FontFamily="Roboto"
             Background="Transparent"
             
             x:Name="Atributos_Vista" Loaded="Atributos_Vista_Loaded">
    <Grid Background="{DynamicResource MaterialDesignCardBackground}">
        <TextBox x:Name="Atributos_TextBox" Background="Black" Margin="60,50,206,368" Foreground="White">
            
        </TextBox>

        <Button x:Name="Agregar_Button" Click="Agregar_Button_Click" Margin="678,70,53,348">
        </Button>

        <ListBox x:Name="Atributos_ListBox" Background="Black" Margin="60,218,206,60" DisplayMemberPath="Nombre" Foreground="White">
            
        </ListBox>
    </Grid>
</UserControl>
